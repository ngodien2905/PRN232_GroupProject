          }
        }
      }
    },
    "/api/Student/{id}/activate": {
      "post": {
        "tags": [
          "Student"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
